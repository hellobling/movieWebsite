<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title><%=title%></title>
        <link rel="stylesheet" type="text/css" href="/css/reset.css" />
        <link rel="stylesheet" type="text/css" href="/css/global.css" />
        <script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
        <script type="text/javascript" src="/js/admin.js"></script>
    </head>
    <body>
        <% include common/header.ejs %>
        <div class="outer">
            <h1><%=title%></h1>
            <table cellspacing="0" cellpadding="0" class="listTable">
                <thead>
                    <tr>
                        <td>电影名字</td>
                        <td>导演</td>
                        <td>国家</td>
                        <td>上映年份</td>
                        <td>录入时间</td> 
                        <td>查看</td>
                        <td>更新</td>
                        <td>删除</td>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0;i< movies.length;i++){ var movie = movies[i];   %>
                        <tr class="item-id-<%= movie._id %>">
                            <td><%= movie.title %></td>
                            <td><%= movie.doctor %></td>
                            <td><%= movie.country %></td>
                            <td><%= movie.year %></td>
                            <td><%= moment(movie.meta.updatedAt).format('MM/DD/YYYY') %></td>
                            <td><a href="../movie/<%= movie.id %>" target="_blank">查看</a></td>
                            <td><a href="../admin/update/<%= movie.id %>" target="_blank">修改</a></td>
                            <td><input type="button" data-id="<%= movie.id%>" value="删除" class="del"/></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>